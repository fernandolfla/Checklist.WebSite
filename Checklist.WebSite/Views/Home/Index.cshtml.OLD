@{
    ViewBag.Title = "Home Page";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebSite.Models.HomeModel

    <div class="jumbotron">
        <h3>CHECKLIST ONLINE - SISTEMA DE CONTROLE DE VIATURAS - Painel de Administração</h3>
        <p class="lead">Sistema em desenvolvimento - Versão de teste.</p>

        <div class="row"> <span>Id:       @ViewData["UsuarioId"]          </span></div>
        <div class="row"> <span>Usuário:  @ViewData["Usuario"]            </span> </div>
        <div class="row"> <span>Nome:     @ViewData["Nome"]        </span></div>
        <div class="row"> <span>Filial:   @ViewData["FilialId"]      </span></div>
        <div class="row"> <span>Token :   @ViewData["token"]         </span></div>

             
        
        <br />
        <span>Bem Vindo ao Checklist Administração de Viaturas</span>
    </div>

        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <div class="card" style="width: 25rem;">
                        <img class="card-img-top" src="~/Imagens/cadastro_usuario.png" alt="Imagem de capa do card">
                        <div class="card-body">
                            <h4 class="card-title">Cadastro de Usuários</h4>
                            <p class="card-text">Cadastro de Usuários permite cadastrar Usuários de Viaturas e Operadores do painel Administrativo</p>
                            <div class="input-group-btn">
                                <a href="#" class="btn btn-primary">Cadastrar</a>
                                <a href="#" class="btn btn-primary">Visualizar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card" style="width: 25rem;">
                        <img class="card-img-top" src="~/Imagens/cadastro_area.png" alt="Imagem de capa do card">
                        <div class="card-body">
                            <h4 class="card-title">Cadastro de Área</h4>
                            <p class="card-text">Cadastro de Área ou Região específica de atuação da viatura ou local de trabalho.</p>
                            <div class="input-group-btn">
                                <a href="#" class="btn btn-primary">Cadastrar</a>
                                <a href="#" class="btn btn-primary">Visualizar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card" style="width: 25rem;">
                        <img class="card-img-top" src="~/Imagens/cadastro_veiculo.png" alt="Imagem de capa do card">
                        <div class="card-body">
                            <h4 class="card-title">Cadastro de Veículos</h4>
                            <p class="card-text">Cadastre seus Veículos de acordo com sua necessidade, informe a Área a qual ela fará parte</p>
                            <div class="input-group-btn">
                                <a href="#" class="btn btn-primary">Cadastrar</a>
                                <a href="#" class="btn btn-primary">Visualizar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card" style="width: 25rem;">
                        <img class="card-img-top" src="~/Imagens/cadastro_fornecedor.png" alt="Imagem de capa do card">
                        <div class="card-body">
                            <h4 class="card-title">Cadastro de Fornecedores</h4>
                            <p class="card-text">Fornecedor será todos os locais onde seus veículos utilizam produtos e serviços. Oficinas, Postos de combustível....</p>
                            <div class="input-group-btn">
                                <a href="#" class="btn btn-primary">Cadastrar</a>
                                <a href="#" class="btn btn-primary">Visualizar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card" style="width: 25rem;">
                        <img class="card-img-top" src="~/Imagens/cadastro_item.png" alt="Imagem de capa do card">
                        <div class="card-body">
                            <h4 class="card-title">Cadastro de Iten</h4>
                            <p class="card-text">Cadastre Aqui os itens que irão aparecer no checklist. Exemplo: Pintura, lanternas, vidros, paralama...</p>
                            <div class="input-group-btn">
                                <a href="#" class="btn btn-primary">Cadastrar</a>
                                <a href="#" class="btn btn-primary">Visualizar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card" style="width: 25rem;">
                        <img class="card-img-top" src="~/Imagens/cadastro_chave.png" alt="Imagem de capa do card">
                        <div class="card-body">
                            <h4 class="card-title">Cadastro de Chaves</h4>
                            <p class="card-text">Caso a Área de atuação possua chaves a ser utilizada em serviço, cadastre aqui.</p>
                            <div class="input-group-btn">
                                <a href="#" class="btn btn-primary">Cadastrar</a>
                                <a href="#" class="btn btn-primary">Visualizar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card" style="width: 25rem;">
                        <img class="card-img-top" src="~/Imagens/configuracao_email.png" alt="Imagem de capa do card">
                        <div class="card-body">
                            <h4 class="card-title">Configuração de Email</h4>
                            <p class="card-text">Configura a conexão de e-mails.Somente o Usuário Administrador pode Acessar esta função</p>
                            <div class="input-group-btn">
                                <a href="#" class="btn btn-primary">Cadastrar</a>
                                <a href="#" class="btn btn-primary">Visualizar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card" style="width: 25rem;">
                        <img class="card-img-top" src="~/Imagens/cadastro_filial.png" alt="Imagem de capa do card">
                        <div class="card-body">
                            <h4 class="card-title">Cadastro da Empresa</h4>
                            <p class="card-text">Cadastro básico com dados da empresa e e-mails para envio de relatórios.</p>
                            <div class="input-group-btn">
                                <a href="#" class="btn btn-primary">Cadastrar</a>
                                <a href="#" class="btn btn-primary">Visualizar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

